.container
  .row
    .col-xs-12
      .h1
        Create a new room
  .row
    .col-xs-12
      = form_for @room, html: {class: 'form-horizontal'} do |f|
        .form-group
          = f.label :name, nil, class: 'col-sm-2 control-label'
          .col-sm-6
            = f.text_field :name, class: 'form-control'
        .room__button-area.col-sm-8
          = f.submit class: 'btn btn-default'